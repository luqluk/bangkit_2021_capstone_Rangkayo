<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#212121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rightText"
        android:text="Hello this is me!!" />


    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Hi!! How are you!!" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftText"
        android:text="Can you help me?" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#212121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:text="Yes, sure, what's your problem?" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:text="I have problem in my household" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#212121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:text="Whats your gender?" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:text="Female" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="#212121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:text="Which one of these statements do you most agree?
" />

    <RadioGroup
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="1. A husband is justified in hitting or beating his wife for at least one specific reason."/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="2. A husband is justified in hitting or beating his wife if she argues with him."/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="3. A husband is justified in hitting or beating his wife if she burns the food"/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="4. A husband is justified in hitting or beating his wife if she goes out without telling him"/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="5. A husband is justified in hitting or beating his wife if she neglects the children."/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="6. A husband is justified in hitting or beating his wife if she refuses to have sex with him."/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>