<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        tools:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/img_photo"
                android:layout_width="171dp"
                android:layout_height="251dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tv_title"
                android:layout_width="110dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_photo" />

            <TextView
                android:id="@+id/tvVotes"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="22dp"
                android:layout_height="13dp"
                android:layout_below="@id/tv_title"
                android:layout_marginStart="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toEndOf="@+id/tvVotes"
                app:layout_constraintTop_toTopOf="@+id/tvVotes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="2dp"
        tools:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/img_photo2"
                android:layout_width="171dp"
                android:layout_height="251dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tv_title2"
                android:layout_width="110dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_photo2" />

            <TextView
                android:id="@+id/tvVotes2"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_below="@id/tv_title2"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="@color/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_title2"
                app:layout_constraintTop_toBottomOf="@+id/tv_title2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="22dp"
                android:layout_height="13dp"
                android:layout_below="@id/tv_title2"
                android:layout_marginStart="8dp"
                android:background="@color/background"
                app:layout_constraintStart_toEndOf="@+id/tvVotes2"
                app:layout_constraintTop_toTopOf="@+id/tvVotes2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
